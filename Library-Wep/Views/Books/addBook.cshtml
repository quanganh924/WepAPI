@model Library_Wep.Models.DTO.addBookDTO
@{
    var listAuthor = ViewBag.listAuthor;
    var listPublisher = ViewBag.listPublisher;
}

<form asp-controller="Books" asp-action="addBook" method="POST">
    <label>Title:</label>
    <input type="text" name="title" asp-for="title" />
    <span asp-validation-for="title" class="text-danger"></span>
    <br />

    <label>Description:</label>
    <input type="text" name="description" asp-for="description" />
    <br />

    <label>Is Read:</label>
    <input type="radio" name="isRead" asp-for="isRead" value="True" /> Yes
    <input type="radio" name="isRead" asp-for="isRead" value="False" /> No
    <br />

    <label>Date Read:</label>
    <input type="date" name="dateRead" asp-for="dateRead" />
    <br />

    <label>Rate:</label>
    <input type="number" name="rate" asp-for="rate" />
    <br />

    <label>Genre:</label>
    <input type="text" name="genre" asp-for="genre" />
    <br />

    <label>Cover Url:</label>
    <input type="text" name="coverUrl" asp-for="coverUrl" />
    <br />

    <label>Date Added:</label>
    <input type="date" name="dateAdded" asp-for="dateAdded" />
    <br />

    <label>Publisher:</label>
    <select name="publisherID" asp-for="publisherID">
        @foreach (var item in listPublisher)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
    <br />

    <label>Author:</label>
    <select name="authorIds" asp-for="authorIds" multiple>
        @foreach (var item in listAuthor)
        {
            <option value="@item.Id">@item.FullName</option>
        }
    </select>
    <br />

    <input type="submit" value="Submit" />
</form>
